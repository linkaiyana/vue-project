{
  "exclude": ["src/**/__tests__/*", "dist"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": true,
    "paths": {
      "@/*": ["./common/*"],
      "@CC/*": ["./common/components/*"],
      "@CF/*": ["./common/fonts/*"],
      "@CU/*": ["./common/utils/*"],
      "@CS/*": ["./common/store/*"]
    }
  }
}
